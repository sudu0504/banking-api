{
  "family": "banking-api-task",
  "networkMode": "awsvpc",
  "containerDefinitions": [
    {
      "name": "banking-api-container",
      "image": "207362637787.dkr.ecr.us-east-1.amazonaws.com/banking-api:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8000,
          "hostPort": 8000
        }
      ],
      "memory": 512,
      "cpu": 256,
      "environment": [
        {
          "name": "ENVIRONMENT",
          "value": "production"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/banking-api",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ],
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::207362637787:role/AmazonECSTaskExecutionRolePolicy",
  "taskRoleArn": "arn:aws:iam::207362637787:role/AmazonECSTaskExecutionRolePolicy"
}
